{% extends 'base.html.twig' %}

{% block title %}StudyOn{% endblock %}

{% block body %}

    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand mb-0 h1" href="/">StudyOn</a>
            </div>
        </nav>

        <div class="row">
            <h1>Курсы</h1>
        </div>

        <br>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for course in courses %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ course.name }}</h5>
                            <p class="card-text">{{ course.description }}</p>
                            <a class="card-link text-decoration-none"
                               href="{{ path('course_show', {'id': course.id}) }}">Пройти</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p colspan="5">no records found</p>
            {% endfor %}
        </div>

        <br>
        <hr>

        <a class="btn btn-outline-dark c_new" href="{{ path('course_new') }}">Новый курс</a>

    </div>

{% endblock %}
