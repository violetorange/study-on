{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn{% endblock %}

{% block body %}
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand mb-0 h1" href="/">StudyOn</a>
            </div>
        </nav>

        <h1>{{ course.name }}</h1>
        <p>{{ course.description }}</p>

        <h2>Уроки</h2>

        <ol>
            {% for lesson in lessons|sort((a, b) => a.number <=> b.number) %}
                <li><a class="text-decoration-none"
                       href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
            {% endfor %}
        </ol>

        <hr>

        <div class="d-inline-flex">
            <a class="btn btn-outline-dark" href="{{ path('course_index') }}">К списку курсов</a>
            <a class="btn btn-outline-dark c_edit" href="{{ path('course_edit', {'id': course.id}) }}">Редактировать</a>
            {{ include('course/_delete_form.html.twig') }}
            <a class="btn btn-outline-dark l_new" href="{{ path('lesson_new', {'course_id': course.id}) }}">Добавить урок</a>
        </div>
    </div>
{% endblock %}
